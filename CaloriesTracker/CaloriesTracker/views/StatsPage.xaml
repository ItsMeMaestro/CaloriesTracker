<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaloriesTracker.StatsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Statistics" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,10,0,20" />

            <!-- Display the sum of calories, proteins, carbs, and fats -->
            <Label Text="Total Calories: " />
            <Label Text="{Binding TotalCalories}" />

            <Label Text="Total Proteins: " />
            <Label Text="{Binding TotalProteins}" />

            <Label Text="Total Carbs: " />
            <Label Text="{Binding TotalCarbs}" />

            <Label Text="Total Fats: " />
            <Label Text="{Binding TotalFats}" />
            <Button Text="Clear Statistics" Clicked="ClearStatistics_Clicked" />
        
            <Button Text="Select Month" Clicked="SelectMonthButton_Clicked" />
            <Picker x:Name="monthPicker" Title="Select a Month" IsVisible="false" SelectedIndexChanged="MonthPicker_SelectedIndexChanged">
            <!-- Add month options here -->
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
