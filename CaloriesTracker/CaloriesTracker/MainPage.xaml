<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="CaloriesTracker.MainPage"
            xmlns:views="clr-namespace:CaloriesTracker"> <!-- Adjust the namespace as needed -->
    

<NavigationPage Title="Products">
    <x:Arguments>
        <views:ProductsPage />
    </x:Arguments>
    
</NavigationPage>

<!-- Page 2 -->
<NavigationPage Title="Goals" BackgroundColor="AliceBlue"  >
    <x:Arguments>
        <views:DailyGoalsPage/>
    </x:Arguments>
    
</NavigationPage>

<!-- Page 3 -->
<NavigationPage Title="Stats">
    <x:Arguments>
        <views:StatsPage />
    </x:Arguments>
    <NavigationPage.TitleView>
        <Label Text="Stats" FontAttributes="Bold, Italic" FontSize="24" />
    </NavigationPage.TitleView>
</NavigationPage>

</TabbedPage>
